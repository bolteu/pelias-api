{
  "logger": {
    "level": "info",
    "colorize": false,
    "timestamp": true
  },
  "esclient": {
    "apiVersion": "5.6",
    "hosts": [
      { "host": "taxify-elasticsearch", "port": 9200 }
    ],
    "requestTimeout": 250,
    "maxRetries": 1
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "1"
      }
    }
  },
  "api": {
    "indexName": "pelias_active",
    "textAnalyzer": "libpostal",
    "services": {
      "pip": { "url": "http://localhost:4200", "timeout": 250, "retries": 1 },
      "libpostal": { "url": "http://localhost:4400", "timeout": 250, "retries": 1 },
      "placeholder": { "url": "http://localhost:4100", "timeout": 250, "retries": 1 },
      "interpolation": { "url": "http://localhost:4300", "timeout": 250, "retries": 1 }
    },
    "defaultParameters": {
      "focus.point.lat": 50.85,
      "focus.point.lon": 4.35
    },
    "targets": {
      "layers_by_source": {
        "poi": ["address", "venue"]
      }
    }
  }
}
